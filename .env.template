# Environment variables for SQLCoder Text-to-SQL application
# Copy this file to .env and update values as needed

# Database settings
DATABASE_URL=sqlite:///./database/sample_database.db

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Frontend settings
FRONTEND_PORT=8501

# SQLCoder settings
SQLCODER_MODEL=defog/sqlcoder-7b-2
SQLCODER_DEVICE=auto

# Logging
LOG_LEVEL=INFO

# Security (change in production)
SECRET_KEY=your-secret-key-change-in-production
